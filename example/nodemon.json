{
  "restartable": "rs",
  "verbose": true,
  "ignore": [
    ".git",
    "node_modules/",
    "dist/",
    "coverage/",
    "*.test.js"
  ],
  "watch": [
    "src/",
    "../../src"
  ],
  "execMap": {
    "ts": "node -r ts-node/register"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "start": "",
    "crash": "",
    "exit": "",
    "restart": ""
  },
  "ext": "js,json,ts"
}